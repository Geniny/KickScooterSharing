@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/login.css" />

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center">Create a new account.</h4>
            <hr />
            <div class="form-group text-center">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control smoth-border" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control smoth-border" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control smoth-border" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="row justify-content-center">
                <div class="col-6">
                    <button type="submit" class="btn btn-block mybtn btn-primary smoth-border mt-4">Register</button>
                </div>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
