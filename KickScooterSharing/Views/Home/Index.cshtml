<title> Home Page </title>
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDDROLTz1lD3UOToVUJRiXR3BfRsdpQdRg&callback=initMap&libraries=&v=beta&map_ids=c59998b5dbf7aeb4"
        defer></script>
<link rel="stylesheet" href="~/css/map.css" />

<div class="row">
    <div id="map" class="float-left"> </div>
    <div id="order-menu" class="d-flex"> </div>
</div>

<div class="modal text-center fade" id="smallModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <h3 id="modal-info">Modal Body</h3>
            </div>
            <div class="modal-footer">
                <div class="container-fluid">
                    <button type="button" class="btn btn-block btn-default" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/map.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/order-menu.js" asp-append-version="true"></script>
    <script>
        $(document).ready(setTimeout(() => {
            var isActive = @ViewData["isActive"];
            if (isActive) {
                $('#order-menu').addClass('opened');
                $('#map').animate({ width: '65%' }, 500);
                $('#order-menu').animate({ width: '35%' }, 500, () => {
                $('#order-menu').load('Home/GetSaleInfo', { 'id': @ViewData["saleId"] }).css("display", "block");
                });
            }
        }, 1000));
    </script>
}
