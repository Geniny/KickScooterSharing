@model KickScooterSharing.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<h4 class="text-center">Product</h4>
<hr />

<div class="row text-center justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control smoth-border" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TariffId" class="control-label"></label>
                <select asp-for="TariffId" class="form-control smoth-border" asp-items="ViewBag.TariffId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScooterId" class="control-label"></label>
                <select asp-for="ScooterId" class="form-control smoth-border" asp-items="ViewBag.ScooterId"></select>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input asp-for="Latitude" class="form-control smoth-border" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input asp-for="Longitude" class="form-control smoth-border" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center mt-5">
                <div class="col-6 form-group">
                    <input type="submit" value="Save" class="btn btn-block btn-primary smoth-border" />
                </div>
            </div>
        </form>
        <div class="row justify-content-center">
            <a asp-action="Management" asp-controller="Home">Back to Management</a>
        </div>
    </div>
</div>



