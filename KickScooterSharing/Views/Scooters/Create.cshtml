@model KickScooterSharing.Models.Scooter

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<h4 class="text-center">Scooter</h4>
<hr />
<div class="row text-center justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control smoth-border" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control smoth-border" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScooterModelId" class="control-label"></label>
                <select asp-for="ScooterModelId" class="form-control smoth-border" asp-items="ViewBag.ScooterModelId"></select>
            </div>
            <div class="row justify-content-center mt-5">
                <div class="col-6 form-group">
                    <input type="submit" value="Create" class="btn btn-block btn-primary smoth-border" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Management" asp-controller="Home">Back to Management</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
